50  LET SCR = 0 : REM SCORE STARTS AT ZERO
100 GOSUB 1000  : REM CALL INITIALIZE SUBROUTINE
200 GOSUB 2000  : REM CALL ANIMATION SUBROUTINE
250 GOSUB 3000  : REM CALL KEYBOARD SUBROUTINE
300 GOTO 200    : REM LOOP!

999  REM INITIALIZE ARRAYS
1000 DIM X(5) : DIM Y(5)
1005 DIM C$(5)
1010 FOR I = 0 TO 5
1020 LET X(I) = 5 + 5 * I
1030 LET Y(I) = RND(1) * 24
1035 LET C$(I) = CHR$(RND(1) * 26 + 65)
1040 NEXT I
1050 RETURN

1999 REM ANIMATE STAR
2000 HOME
2005 PRINT "SCORE: " ; SCR
2010 FOR I = 0 TO 5
2020 HTAB X(I) : VTAB Y(I)
2030 PRINT C$(I)
2035 IF ASC(C$(I)) = KEY THEN GOSUB 4000
2040 LET Y(I) = Y(I) + 1
2050 IF Y(I) > 23 THEN Y(I) = 1 : LET SCR = SCR - 1
2060 NEXT I
2070 RETURN

2999 REM GET KEY PRESSED
3000 LET KEY = PEEK(49152) - 128
3010 RETURN

3999 REM CORRECT KEY PRESS!
4000 LET SCR = SCR + 1
4010 LET Y(I) = 1
4020 LET C$(I) = CHR$(RND(1) * 26 + 65)
4030 RETURN